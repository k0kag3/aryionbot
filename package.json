{
  "name": "aryionbot",
  "version": "1.0.0",
  "author": "kokage <k0kag3.k0kag3+github@gmail.com>",
  "scripts": {
    "build": "tsc",
    "dc:dev": "docker-compose -f docker-compose.development.yml up --build",
    "dc:start": "docker-compose up -d --build",
    "dc:stop": "docker-compose down",
    "dc:update": "yarn dc:stop && git pull --rebase && yarn dc:start",
    "dev": "nodemon --watch src --exec 'ts-node' src/index.ts",
    "dump": "docker-compose exec -T mongo mongodump --archive > db.dump",
    "migrate": "docker-compose run -T bot yarn ts-node ./src/scripts/migrate.ts",
    "restore": "docker-compose exec -T mongo mongorestore --archive < db.dump",
    "start": "node .",
    "test": "jest"
  },
  "dependencies": {
    "date-fns": "^2.21.1",
    "debug": "^4.3.1",
    "discord.js": "^12.5.3",
    "jsdom": "^16.5.3",
    "mongoose": "^5.12.5",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/jest": "^26.0.22",
    "@types/jsdom": "^16.2.10",
    "@types/mongoose": "^5.10.5",
    "@types/node": "^14.14.41",
    "@types/node-fetch": "^2.5.10",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "main": "dist/index.js",
  "license": "Apache-2.0"
}
